{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "API_TIMEOUT_MS": "600000"
  },
  "permissions": {
    "allow": [
      "Agent(*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(npx:*)",
      "Bash(flutter pub run build_runner build:*)",
      "Bash(python3:*)",
      "Bash(rm:*)",
      "Bash(awk:*)",
      "Bash(cut:*)",
      "Bash(flutter run:*)",
      "Bash(docker exec:*)",
      "Bash(cat:*)",
      "Bash(cp:*)",
      "Bash(sed:*)",
      "Bash(flutter build:*)",
      "Bash(mv:*)",
      "Bash(touch:*)",
      "Bash(flutter packages pub run:*)",
      "Bash(node:*)",
      "Bash(dart run build_runner:*)",
      "Bash(docker-compose:*)",
      "Bash(docker logs:*)",
      "Bash(mv:*)",
      "Bash(flutter logs:*)",
      "Bash(flutter pub:*)",
      "Bash(flutter analyze:*)",
      "Bash(grep:*)",
      "Bash(chmod:*)",
      "Bash(grep:*)",
      "Bash(dart analyze:*)",
      "Bash(dart fix:*)",
      "Bash(git checkout:*)",
      "Bash(sqlite3:*)",
      "Bash(xcrun simctl uninstall:*)",
      "Bash(pkill:*)",
      "Bash(iconv:*)",
      "Bash(for:*)",
      "Bash(do echo \"=== $file ===\")",
      "Bash(wc:*)",
      "Bash(done)",
      "Bash(flutter packages:*)",
      "WebFetch(domain:www.agent-grow.com)",
      "WebFetch(domain:www.cloudsign.jp)"
    ],
    "deny": [
      "Bash(psql:*)",
      "Bash(sudo:*)",
      "Bash(rm -rf:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Read(.env)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Write(.env*)",
      "Bash(wget:*)"
    ]
  },
  "model": "opus"
}